
# Firebase Client SDK Configuration (NEXT_PUBLIC_ prefix makes them available in the browser)
NEXT_PUBLIC_FIREBASE_API_KEY="YOUR_CLIENT_API_KEY"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="YOUR_PROJECT_ID.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="YOUR_PROJECT_ID"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="YOUR_PROJECT_ID.appspot.com"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="YOUR_MESSAGING_SENDER_ID"
NEXT_PUBLIC_FIREBASE_APP_ID="YOUR_APP_ID"
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID="YOUR_MEASUREMENT_ID" # Optional

# Firebase Admin SDK Configuration (Server-side only, DO NOT expose service account key in client code)
# Option 1: Use Application Default Credentials (Recommended for Cloud Functions, Cloud Run, GCE, etc.)
# Set this environment variable to the path of your service account key JSON file.
# GOOGLE_APPLICATION_CREDENTIALS="/path/to/your/serviceAccountKey.json"

# Option 2: Explicitly configure Admin SDK (Less common for Next.js unless self-hosting with specific needs)
# FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"
# FIREBASE_ADMIN_CLIENT_EMAIL="your-service-account@your-project-id.iam.gserviceaccount.com"

# Firebase Cloud Messaging (FCM) VAPID Key (Client-side for getToken)
# Generate this key in your Firebase project settings under Cloud Messaging -> Web configuration -> Web Push certificates
NEXT_PUBLIC_FIREBASE_VAPID_KEY="YOUR_FCM_VAPID_PUBLIC_KEY"

# Google AI API Key (if using Genkit with Google AI)
# GOOGLE_GENAI_API_KEY="YOUR_GOOGLE_AI_API_KEY"
